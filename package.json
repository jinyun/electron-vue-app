{
  "name": "eva",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "Jinyun Guo",
  "description": "EVA is a Electron-based application with Vue 3, Vite, and Electron Builder.",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview",
    "build:linux": "vue-tsc && vite build && electron-builder --linux",
    "build:win": "vue-tsc && vite build && electron-builder --win",
    "build:mac": "vue-tsc && vite build && electron-builder --mac"
  },
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vue-tsc": "^2.0.26",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
